{
    "manifest_version": 2,
    "name": "Shocktype",
    "version": "1.0",
    "description": "Sends HTTP request on specific result on monkeytype",
    "browser_specific_settings": {
        "gecko": {
          "id": "addon@shocktype.com"
        }
      },
    "icons": {
        "48": "icons/shocktype-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.monkeytype.com/*"
            ],
            "js": [
                "shocktype.js"
            ]
        }
    ],
    
    "browser_action": {
        "default_icon": "icons/shocktype-32.png",
        "default_title": "Shocktype",
        "default_popup": "popup/index.html"
    },
    
    "permissions": [
        "*://*/*",
        "storage"
    ]
}